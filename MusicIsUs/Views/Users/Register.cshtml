
@{
    ViewBag.Title = "Register";
    var instruments = (List<MusicIsUs.Models.Instruments>)ViewBag.instruments;
}


<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <i class="bi bi-person-fill"></i>
        </div>

        <!-- Login Form -->
        <form id="register" method="post" action="/Users/Register">
            @Html.AntiForgeryToken()
            <span id="icon" class="glyphicon glyphicon-user fadeIn first">
            </span>
            <input type="text" id="login" class="fadeIn first" name="login" placeholder="Username">
            <input type="password" id="password" class="fadeIn second" name="password" placeholder="Passowrd">
            <input type="password" id="passwordRep" class="fadeIn third" name="passwordRep" placeholder="Repeat Password">
            <h4 id="favorite-instrument" class="fadeIn fourth">What's your favorite instrument?</h4>
            <select name="instrument" class="fadeIn fifth">
                @foreach (var instument in instruments)
                {
                    <option value="@instument.Id">
                        @instument.Name
                    </option>
                }
            </select>
            <input type="submit" class="fadeIn fourth" value="Register Now!">
        </form>

    </div>
</div>

