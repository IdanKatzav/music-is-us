@{
    ViewBag.Title = "Home Page";
    var user = (MusicIsUs.Models.Users)ViewBag.user;
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
@Scripts.Render("~/Scripts/card-handler.js")
@Styles.Render("~/Content/Site.css")
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <section>
            <img id="logo" style="padding-bottom:100px; padding-top:50px;" class="center" src="../../pics/logo-white.jpeg">
            <p class="lead">Music Is Us is a website for music lovers!You can see alot of Vinyls and music instruments around the globe. You can like them and get recomendations just for you. We hope you would enjoy!</p>
            <p><a href="@Url.Action("Contact","Home")" class="btn btn-primary btn-lg">contact us &raquo;</a></p>
        </section>
    </div>
</div>
<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <ul class="list-group" id="vinylsTop">
            <li class="list-group-item active">Top 5 Vinyls</li>
            @for (var i = 0; ViewBag.topVinyls != null &&
                     i < Enumerable.Count(ViewBag.topVinyls); i++)
            {
                var vin = ViewBag.topVinyls[i];
                <li class="list-group-item">
                    @vin.Name
                    <span class="badge badge-primary badge-pill">@(i + 1)</span>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <ul class="list-group" id="instrumentsTop">
            <li class="list-group-item active">Top 5 Instruments</li>
            @for (var i = 0; ViewBag.topInstruments != null &&
                     i < Enumerable.Count(ViewBag.topInstruments); i++)
            {
                var inst = ViewBag.topInstruments[i];
                <li class="list-group-item">
                    @inst.Name
                    <span class="badge badge-primary badge-pill">@(i + 1)</span>
                </li>
            }
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <div class="videoPlayer">
            <iframe style="border-radius:20px;" width="400" height="250" src="https://www.youtube.com/embed/rt4zLhT2opc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
    <div class="col-md-5 col-md-offset-1">
        <div class="videoPlayer" style="border-radius:20px;">
            <iframe style="border-radius:20px;" src="https://open.spotify.com/embed/playlist/37i9dQZEVXbJ6IpvItkve3" width="400" height="250" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>
    </div>
</div>
<br />
<br />
@if (user != null)
{
    <h3 style="color:white"><b>User Recomendations:</b></h3>
    <br />
    <div class="row" style="background-color:whitesmoke; border-radius:20px;">
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item" id="vinLink">
                        <a class="nav-link active" href="#">Vinyls</a>
                    </li>
                    <li class="nav-item" id="instLink">
                        <a class="nav-link" href="#">Instruments</a>
                    </li>
                </ul>
            </div>

            <div class="card-body" id="recommVinyls">
                <div class="row">
                    @for (int i = 0; ViewBag.recommVinyls != null && i < Enumerable.Count(ViewBag.recommVinyls); i++)
                    {
                        var vin = ViewBag.recommVinyls[i];
                        <div class="col-md-3 col-md-offset-1 card-new">
                            <div class="card-container">
                                <h4><b>@vin.Name</b></h4>
                                <p>@("Genre: " + vin.Genere + ", ")</p>
                                <p>@("Artist: " + vin.ArtistName + ",")</p>
                                <p>@("Origin: " + vin.OriginCountry)</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <a href="@Url.Action("Index","Vinyls")" class="col-md-1 col-md-offset-10 btn btn-primary">Go To Vinyls</a>
                </div>
            </div>
            <div class="card-body hide" id="recommInstruments">
                <div class="row">
                    @for (int i = 0; ViewBag.recommInstruments != null && i < Enumerable.Count(ViewBag.recommInstruments); i++)
                    {
                        var inst = ViewBag.recommInstruments[i];
                        <div class="col-md-3 col-md-offset-1 card-new">
                            <div class="card-container">
                                <h4><b>@inst.Name</b></h4>
                                <p>@("Type: " + inst.Type + ", ")</p>
                                <p>@("Made In: " + inst.MadeInCountry + ",")</p>
                                <p>@("Brand: " + inst.Brand)</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <a href="@Url.Action("Index","Instruments")" class="col-md-2 col-md-offset-9 btn btn-primary">Go To Instruments</a>
                </div>
            </div>
        </div>
    </div>
}
