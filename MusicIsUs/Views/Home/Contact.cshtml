@model IEnumerable<MusicIsUs.Models.Branches>

@{
    ViewBag.Title = "Contact";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
@Scripts.Render("~/Scripts/MapHandler.js")
@Styles.Render("~/Content/Site.css")
@Scripts.Render("~/Scripts/Wheather.js")
<img id="logo" style="padding-bottom:100px; padding-top:50px;" class="center" src="../../pics/logo-white.jpeg">

<h3 style="text-align : center">Contact Us</h3>


<div>
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <form class="form-inline">
            <div class="form-group col-md-2">
                <select class="form-control" name="city">
                    <option id="grayOption" value="" selected>Select Branch City Name</option>
                    @foreach (var nameOfCity in ViewBag.listOfBranchCities)
                    {
                        <option value="@nameOfCity">@nameOfCity</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <select class="form-control" name="street">
                    <option id="grayOption" value="" selected>Select Address</option>
                    @foreach (var Street in ViewBag.listOfBranchStreets)
                    {
                        <option value="@Street">@Street</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search">
                            Search
                        </span>
                    </button>
                </div>

            </div>
        </form>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td><button class="displayOnMap btn" data-prop="@item.Street"/>View the Location on the map</td>
            </tr>
        }
    </tbody>
</table>
