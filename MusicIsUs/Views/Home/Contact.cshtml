@model IEnumerable<MusicIsUs.Models.Branches>

@{
    ViewBag.Title = "Contact";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
@Scripts.Render("~/Scripts/MapHandler.js")
@Styles.Render("~/Content/Site.css")
<img id="logo" style="padding-bottom:100px; padding-top:50px;" class="center" src="../../pics/logo-white.jpeg">
<div class="videoPlayer">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/rt4zLhT2opc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
<div class="videoPlayer">
    <iframe src="https://open.spotify.com/embed/playlist/37i9dQZEVXbJ6IpvItkve3" width="560" height="315" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</div>
<h3 style="text-align : center">Contact Us</h3>


<div>
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <form class="form-inline">
            <div class="form-group col-md-2">
                <select class="form-control" name="city">
                    <option id="grayOption" value="" selected>Select Branch City Name</option>
                    @foreach (var nameOfCity in ViewBag.listOfBranchCities)
                    {
                        <option value="@nameOfCity">@nameOfCity</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <select class="form-control" name="street">
                    <option id="grayOption" value="" selected>Select Address</option>
                    @foreach (var Street in ViewBag.listOfBranchStreets)
                    {
                        <option value="@Street">@Street</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search">
                            Search
                        </span>
                    </button>
                </div>

            </div>
        </form>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td><button class="displayOnMap" data-prop="@item.Street"/>View the Location on the map</td>
            </tr>
        }
    </tbody>
</table>
<h3 style="text-align : center">Our Offices</h3>
<iframe class="mapDisplay"
         width="600"
        height="450"
        style="border:0"
        loading="lazy"
        allowfullscreen
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBsG-gcX20RziyqnfWo6p-H44M4vbECMQ4&q=Tsahal+St+4, Ashdod"
></iframe>
